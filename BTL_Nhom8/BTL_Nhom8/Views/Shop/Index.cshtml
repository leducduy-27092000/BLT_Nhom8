@using PagedList.Mvc;
@model PagedList.IPagedList<BTL_Nhom8.Models.Product>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center"
         style="background-image: url(/wwwroot/img/bg-img/24.jpg);">
        <h2>Sản phẩm</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Cửa hàng</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Shop Area Start ##### -->
<section class="shop-page section-padding-0-100">
    <div class="container">
        <div class="row">
            <!-- Shop Sorting Data -->
            <div class="col-12">
                <div class="shop-sorting-data d-flex flex-wrap align-items-center justify-content-between">
                    <!-- Shop Page Count -->
                    <div class="shop-page-count">
                        <p>Hiển thị 1-9 trong số 72 kết quả</p>
                    </div>
                    <!-- Search by Terms -->
                    <div class="search_by_terms">
                        <form action="#" method="post" class="form-inline ">
                            

                            <div class="md-form mb-3 mt-3">
                                <input class="form-control" type="text" placeholder="Search" aria-label="Search">
                                <i class="fas fa-search" aria-hidden="true"></i>
                            </div>
                            
                            <select class="custom-select widget-title">
                                <option selected>Hiển thị: 3</option>
                                <option value="1">3</option>
                                <option value="2">5</option>
                                <option value="3">9</option>
                            </select>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Sidebar Area -->
            <div class="col-12 col-md-4 col-lg-3">
                <div class="shop-sidebar-area">

                    <!-- Shop Widget -->
                    @*<div class="shop-widget price mb-50">
                        <h4 class="widget-title">Giá</h4>
                        <div class="widget-desc">
                            <div class="slider-range">
                                <div data-min="8" data-max="30" data-unit="$"
                                     class="slider-range-price ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all"
                                     data-value-min="8" data-value-max="30" data-label-result="Gía cả:">
                                    <div class="ui-slider-range ui-widget-header ui-corner-all"></div>
                                    <span class="ui-slider-handle ui-state-default ui-corner-all first-handle"
                                          tabindex="0"></span>
                                    <span class="ui-slider-handle ui-state-default ui-corner-all"
                                          tabindex="0"></span>
                                </div>
                                <div class="range-price">Giá: $8 - $30</div>
                            </div>
                        </div>
                    </div>*@

                    <!-- Shop Widget -->
                    <div class="shop-widget catagory mb-50">
                        <h4 class="widget-title">Danh mục</h4>
                        <div class="widget-desc">
                            <!-- Single Checkbox -->
                            <div class="custom-control custom-radio d-flex align-items-center mb-2">

                                <a class="custom-control-label" href="/Shop/Index?Category_Id=0">
                                    Tất cả <span class="text-muted">
                                        (@ViewBag.TotalProducts)
                                    </span>
                                </a>

                            </div>
                            <!-- Single Checkbox -->


                            @foreach (var item in ViewBag.categories)
                            {
                                <!-- Single Checkbox -->
                                <div class="custom-control custom-radio d-flex align-items-center mb-2">

                                    <a class="custom-control-label" href="/Shop/Index?Category_Id=@item.Category_Id">
                                        @item.Name
                                    </a>

                                </div>
                                <!-- Single Checkbox -->
                            }
                        </div>
                    </div>

                    <!-- Shop Widget -->
                    <div class="shop-widget sort-by mb-50">
                        <h4 class="widget-title">Sắp xếp theo</h4>
                        <div class="widget-desc">
                            <!-- Single -->
                            <div class="custom-control custom-checkbox d-flex align-items-center mb-2">
                                <input type="checkbox" class="custom-control-input" id="customCheck7">
                                <label class="custom-control-label" for="customCheck7">Điểm đến mới</label>
                            </div>
                            <!-- Single Checkbox -->
                            <div class="custom-control custom-checkbox d-flex align-items-center mb-2">
                                <input type="checkbox" class="custom-control-input" id="customCheck8">
                                <label class="custom-control-label" for="customCheck8">Theo thứ tự bảng chữ cái, A-Z</label>
                            </div>
                            <!-- Single Checkbox -->
                            <div class="custom-control custom-checkbox d-flex align-items-center mb-2">
                                <input type="checkbox" class="custom-control-input" id="customCheck9">
                                <label class="custom-control-label" for="customCheck9">Theo thứ tự, Z-A</label>
                            </div>
                            <!-- Single Checkbox -->
                            <div class="custom-control custom-checkbox d-flex align-items-center mb-2">
                                <input type="checkbox" class="custom-control-input" id="customCheck10">
                                <label class="custom-control-label" for="customCheck10">Giá: thấp đến cao</label>
                            </div>
                            <!-- Single Checkbox -->
                            <div class="custom-control custom-checkbox d-flex align-items-center">
                                <input type="checkbox" class="custom-control-input" id="customCheck11">
                                <label class="custom-control-label" for="customCheck11">Giá: cao đến thấp</label>
                            </div>
                        </div>
                    </div>

                    <!-- Shop Widget -->
                    <div class="shop-widget best-seller mb-50">
                        <h4 class="widget-title">Bán chạy nhất</h4>
                        <div class="widget-desc">

                            <!-- Single Best Seller Products -->
                            <div class="single-best-seller-product d-flex align-items-center">
                                <div class="product-thumbnail">
                                    <a href="@Url.Action("Shop_Detail", "Shop")"><img src="~/wwwroot/img/bg-img/4.jpg" alt=""></a>
                                </div>
                                <div class="product-info">
                                    <a href="@Url.Action("Shop_Detail", "Shop")">Hoa xương rồng</a>
                                    <p>$10.99</p>
                                    <div class="ratings">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                            </div>

                            <!-- Single Best Seller Products -->
                            <div class="single-best-seller-product d-flex align-items-center">
                                <div class="product-thumbnail">
                                    <a href="@Url.Action("Shop_Detail", "Shop")"><img src="~/wwwroot/img/bg-img/5.jpg" alt=""></a>
                                </div>
                                <div class="product-info">
                                    <a href="@Url.Action("Shop_Detail", "Shop")">Hoa tuy lip</a>
                                    <p>$11.99</p>
                                    <div class="ratings">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                            </div>

                            <!-- Single Best Seller Products -->
                            <div class="single-best-seller-product d-flex align-items-center">
                                <div class="product-thumbnail">
                                    <a href="@Url.Action("Shop_Detail", "Shop")"><img src="~/wwwroot/img/bg-img/34.jpg" alt=""></a>
                                </div>
                                <div class="product-info">
                                    <a href="@Url.Action("Shop_Detail", "Shop")">Cây tái sinh</a>
                                    <p>$9.99</p>
                                    <div class="ratings">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- All Products Area -->
            <div class="col-12 col-md-8 col-lg-9">
                <div class="shop-products-area">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <!-- Single Product Area -->
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-area mb-50">
                                    <!-- Product Image -->
                                    <form method="post" action="/Cart/AddItem">
                                        <a href="/Shop/Shop_Detail?id=@item.Product_Id"><img src="~/wwwroot/img/Images/@item.Avatar" alt="" style="width:200px; height:200px"></a>
                                        <div class="form-group d-flex justify-content-between">
                                            <input type="hidden" name="product_Id" value=@item.Product_Id />
                                            <input type="number" name="quantity" value="1" id="sl_${p.id }" class="form-control mr-1"
                                                   style="width: 60px;">
                                            <button type="submit" class="btn btn-warning btn-sm">
                                                Thêm vào giỏ
                                            </button>
                                        </div>
                                    </form>
                                    <!-- Product Info -->
                                    <div class="product-info mt-15 text-center">
                                        <a href="/Shop/Shop_Detail?id=@item.Product_Id">
                                            <p>@item.Name</p>
                                        </a>
                                        <h6>@item.Price</h6>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @*<nav aria-label="Page navigation">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>*@
                    <br />
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page, Category_Id = ViewBag.current_Cate }))
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Shop Area End ##### -->

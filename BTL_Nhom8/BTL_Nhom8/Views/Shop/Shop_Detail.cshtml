@model BTL_Nhom8.Models.Product

@{
    ViewBag.Title = "Shop_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(/wwwroot/img/bg-img/24.jpg);">
        <h2>Chi tiết sản phẩm</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Shop")">Cửa hàng</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Single Product Details Area Start ##### -->
<section class="single_product_details_area mb-50">
    <div class="produts-details--content mb-50">
        <div class="container">
            <div class="row justify-content-between">

                <div class="col-12 col-md-6 col-lg-5">
                    <div class="single_product_thumb">
                        <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <a class="product-img" href="~/wwwroot/img/Images/@Model.Avatar" title="Product Image">
                                        <img class="d-block w-100" src="~/wwwroot/img/Images/@Model.Avatar" alt="1">
                                    </a>
                                </div>
                                <div class="carousel-item ">
                                    <a class="product-img" href="~/wwwroot/img/Images/@Model.Avatar" title="Product Image">
                                        <img class="d-block w-100" src="~/wwwroot/img/Images/@Model.Avatar" alt="1">
                                    </a>
                                </div>
                                <div class="carousel-item ">
                                    <a class="product-img" href="~/wwwroot/img/Images/@Model.Avatar" title="Product Image">
                                        <img class="d-block w-100" src="~/wwwroot/img/Images/@Model.Avatar" alt="1">
                                    </a>
                                </div>

                               
                            </div>
                            <ol class="carousel-indicators">
                                <li class="active" data-target="#product_details_slider" data-slide-to="0" style="background-image: url(/wwwroot/img/Images/@Model.Avatar);">
                                </li>
                                <li data-target="#product_details_slider" data-slide-to="1" style="background-image: url(/wwwroot/img/Images/@Model.Avatar);">
                                </li>
                                <li data-target="#product_details_slider" data-slide-to="2" style="background-image: url(/wwwroot/img/Images/@Model.Avatar);">
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="single_product_desc">
                        <h4 class="title">@Model.Name</h4>
                        <h4 class="price">@Model.Price</h4>
                        <div class="short_overview">
                            <p>@Model.Short_Description</p>
                        </div>

                        <div class="cart--area d-flex flex-wrap align-items-center">
                            <!-- Add to Cart Form -->
                            <form class="cart clearfix d-flex align-items-center" method="post" action="/Cart/AddItem">
                                <div class="quantity">
                                    <span class="qty-minus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                    <input type="number" class="qty-text" id="qty" step="1" min="1" max="12" name="quantity" value="1">
                                    <span class="qty-plus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                    <input type="hidden" name="product_Id" value= @Model.Product_Id />
                                </div>
                                <button type="submit" name="addtocart" value="5" class="btn alazea-btn ml-15">Thêm vào giỏ hàng</button>
                            </form>
                            <!-- Wishlist & Compare -->
                            <div class="wishlist-compare d-flex flex-wrap align-items-center">
                                <a href="#" class="wishlist-btn ml-15"><i class="icon_heart_alt"></i></a>
                                <a href="#" class="compare-btn ml-15"><i class="arrow_left-right_alt"></i></a>
                            </div>
                        </div>

                        <div class="products--meta">
                            @*<p><span>SKU:</span> <span>CT201807</span></p>*@
                            <p><span>Danh mục:</span> <span>@Model.Category.Name</span></p>
                            @*<p><span>Tags:</span> <span>plants, green, cactus </span></p>*@
                            
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="product_details_tab clearfix">
                    <!-- Tabs -->
                    <ul class="nav nav-tabs" role="tablist" id="product-details-tab">
                        <li class="nav-item">
                            <a href="#description" class="nav-link active" data-toggle="tab" role="tab">Mô tả</a>
                        </li>
                    </ul>
                    <!-- Tab Content -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade show active" id="description">
                            <div class="description_area">
                                <p>@Model.Detail_Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Single Product Details Area End ##### -->
<!-- ##### Related Product Area Start ##### -->
<div class="related-products-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section Heading -->
                <div class="section-heading text-center">
                    <h2>Sản phẩm liên quan</h2>
                </div>
            </div>
        </div>

        <div class="row">

            <!-- Single Product Area -->
            @foreach (var item in @ViewBag.sqlq)
            {
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="single-product-area mb-100">
                        <!-- Product Image -->
                        <a class="product-img" href="~/wwwroot/img/Images/@item.Avatar" title="Product Image">
                            <img class="d-block w-100" src="~/wwwroot/img/Images/@item.Avatar" alt="1">
                        </a>
                        <!-- Product Info -->
                        <div class="product-info mt-15 text-center">
                                <a href="/Shop/Shop_Detail?id=@item.Product_Id">
                                    <p>@item.Name</p>
                                </a>
@*                            @Html.ActionLink((string)@item.Name, "Shop_Detail", "Shop", new { id = @item.Product_Id },"");
*@                           
                            <h6>@item.Price</h6>
                        </div>
                        
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- ##### Related Product Area End ##### -->

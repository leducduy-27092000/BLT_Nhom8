@model BTL_Nhom8.Dto.Cart

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(/wwwroot/img/bg-img/24.jpg);">
        <h2>Thủ tục thanh toán</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thủ tục thanh toán</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Checkout Area Start ##### -->
<div class="checkout_area mb-100">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-12 col-lg-7">
                <div class="checkout_details_area clearfix">
                    <h5>Chi tiết thanh toán</h5>
                    <form name="formCheckOut" action="/Cart/Final_Checkout" method="post">
                        <div class="row">
                            <div class="col-12 mb-4">
                                <label for="email_address">Địa chỉ email *</label>
                                <input type="email" class="form-control" name="Email" id="email_address" value="@Model.customerDto.Email" disabled>
                            </div>

                            <div class="col-12 mb-4">
                                <label for="customers">Tên khách hàng *</label>
                                <input type="text" class="form-control" name="Customer_Name" id="customers" value="@Model.customerDto.Customer_Name" disabled>
                            </div>

                            <div class="col-12 mb-4">
                                <label for="customers">Số điện thoại *</label>
                                <input type="text" class="form-control" name="Telephone" id="customers" value="@Model.customerDto.Telephone" >
                            </div>

                            <div class="col-12 mb-4">
                                <label for="company">Địa chỉ *</label>
                                <input type="text" class="form-control" name="Address" id="address" value="@Model.customerDto.Address">
                            </div>

                        </div>
                    </form>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="checkout-content">
                    <h5 class="title--">Đơn hàng của bạn</h5>
                    <div class="products">
                        <div class="products-data">
                            <h5>Các sản phẩm:</h5>
                            @foreach (var item in Model.cartLines)
                            {
                                <div class="single-products d-flex justify-content-between align-items-center">

                                    <p>@item.productDto.Name</p>
                                    <h5>@item.productDto.Price</h5>


                                </div>
                            }
                        </div>
                    </div>
                    <div class="subtotal d-flex justify-content-between align-items-center">
                        <h5>Tổng loại hàng:</h5>
                        <h5>@(Model.cartLines.Count())</h5>
                    </div>
                    <div class="subtotal d-flex justify-content-between align-items-center">
                        <h5>Tổng số lượng sản phẩm mua</h5>
                        <h5>@(Model.cartLines.Sum(x=>x.quantity))</h5>
                    </div>

                    <div class="order-total d-flex justify-content-between align-items-center">
                        <h5>Tổng hóa đơn</h5>
                        <h5>@(Model.cartLines.Sum(item=>item.getAmount()))</h5>
                    </div>
                    <div class="checkout-btn mt-30">
                        <button onclick="document.forms['formCheckOut'].submit()"  class="btn alazea-btn w-100">Đặt hàng</button>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Checkout Area End ##### -->


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <h3 class="right__title">Danh sách sản phẩm</h3>
                <br>
                <div class="page-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                               Danh sách sản phẩm
                            </li>
                        </ol>
                    </nav>

                    <a class="btn btn-outline-primary mb-1" href="@Url.Action("Add_Product", "Product")" role="button">
                        Thêm mới
                    </a>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên</th>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Đơn giá</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Danh mục</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Cây thủy sinh trắng</td>
                                <td>
                                    <img src="~/Areas/Admin/Assets/images/9.jpg" alt="" style="height: 100px; width: 100px;">
                                </td>
                                <td>450000</td>
                                <td>Cây Sinh khuyển</td>
                                <td>15</td>
                                <td>
                                    <span id="_product_status_${product.id} }">
                                        <c:choose>
                                            <c:when test="${product.status }">
                                                <span class="badge badge-primary">Active</span>
                                            </c:when>
                                            <c:otherwise>
                                                <span class="badge badge-warning">InActive</span>
                                            </c:otherwise>
                                        </c:choose>
                                    </span>
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="#" role="button"
                                       style="line-height: 10px;">Edit</a>
                                    <button class="btn btn-danger" role="button"
                                            style="line-height: 10px;">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">1</th>
                                <td>Cây thủy sinh trắng</td>
                                <td>
                                    <img src="~/Areas/Admin/Assets/images/10.jpg" alt="" style="height: 100px; width: 100px;">
                                </td>
                                <td>450000</td>

                                <td>20</td>
                                <td>Cây Sinh khuyển</td>
                                <td>
                                    <span id="_product_status_${product.id} }">
                                        <c:choose>
                                            <c:when test="${product.status }">
                                                <span class="badge badge-primary">Active</span>
                                            </c:when>
                                            <c:otherwise>
                                                <span class="badge badge-warning">InActive</span>
                                            </c:otherwise>
                                        </c:choose>
                                    </span>
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="#" role="button"
                                       style="line-height: 10px;">Edit</a>
                                    <button class="btn btn-danger" role="button"
                                            style="line-height: 10px;">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div id="styleSelector">

            </div>
        </div>
    </div>
</div>

